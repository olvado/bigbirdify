  <article>
    <header>
      <h1>BigBirdify</h1>
    </header>
    <section>
      <%= content_tag :div, "", class: "message" %>
      <%= yield %>
    </section>
    <footer>
      Put together by @<%= link_to "olvado", "http://olvado.com" %>.
    </footer>
  </article>

  <%= javascript_include_tag 'application' %>
<% end %>

</html>
